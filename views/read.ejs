<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  </head>
  <style type="text/css">
  	#top{
  		margin-top: -50px;
  	}
    
    #heading{
      text-align: center;
    }
    .footer{
      text-align: center;
    }
  </style>
  <body>
  	<div class="container" id="top">
  		<div class="page-header" id="heading">
  			<h1>Blog</h1>
  		</div>
		</div>  	
  	<!--nav bar-->
  	<nav class="navbar navbar-inverse">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
      <li><a href="/">Home</a></li>
        <li><a href="/posts">Add Post</a></li>
        <li><a href="/categories">Add Categories</a></li>
        
      </ul>
     
    </div><!-- /.navbar-collapse -->

  </div><!-- /.container-fluid -->

</nav>

    	<div class="container">
        <div class="jumbotron">
      
          <h2 class="title"><%= result[0].title %></h2>
          <h3 class="category" ><%= result[0].categories %></h3>
          <h4 class="author"><%= result[0].author %></h4>
          <h4 class="date"><%= result[0].date %></h4>
          <h5><%= result[0].content %></h5>

        </div> 
        <div class="jumbotron">
          <h2>Comments!!</h2><br>
          <% if(comments){ %>
          <%for (var i=0;i< comments.length;i++){ %>
          <h4><%= comments[i].name %></h4>
          <h5><%= comments[i].comment %></h5>
          <br>
          <% } %>
          <% } %>
          <% if(!comments){ %>
          <h3>No comments!</h3>
          <% } %>
        </div>
      </div>

      <div class="container" >
      <h3>Comment!!</h3>
          <form action="/addcomment/<%= result[0]._id %>" method="post" class="form-group">
            <label>Name</label>
            <input type="text" name="name" class="form-control" placeholder="Name..">
            <label>Email</label>
            <input type="email" name="email" class="form-control" placeholder="Email please...">
            <label>Comment</label>
            <input type="text" name="comment" class="form-control" placeholder="Comment here..."><br>
            <input type="submit" value="Submit" class="btn btn-md btn-primary">
          </form>
      </div>

      <div class="container footer">
        <div class="row">
            <div class="col-lg-12">
              <p>Blog &copy; 2017 </p>
        
            </div>
          </div>
          </div>
  </body>
</html>