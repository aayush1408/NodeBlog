<!DOCTYPE html>
<html>
  <head>
    <title>Post</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  </head>
  <style type="text/css">
    #top{
      margin-top: -50px;
    }
    p{
      font-size: 3px;
      line-height: 4px;
    }
    #heading{
      text-align: center;
    }
    .footer{
      text-align: center;
    }
  </style>
  <body>
  	<div class="container" id="top">
  		<div class="page-header" id="heading">
  			<h1>Blog</h1>
  		</div>
  	</div>
  	<!--nav bar-->
  	<nav class="navbar navbar-inverse">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
      <li><a href="/">Home</a></li>
        <li><a href="/posts">Post</a></li>
        <li><a href="/categories">Add Categories</a></li>
        
      </ul>
     
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>


<div class="container">
  <div class="jumbotron">
      <form class="form-group" action="/add" enctype="multipart/form-data" method="post">
      <label>Title</label>
      <input type="text" name="title" placeholder="Add your title.." class="form-control">
      <br>
      <label>Categories</label>
      <select name="categories"  class="form-control">
      <% if(results){ %>
      <% for(var i =0;i < results.length ; i++){ %>
      <option><%= results[i].category; %></option>
      <% } %>
      <% } %>
      </select>
      <br>
      <label>Author</label>
      <input type="text" name="author" placeholder="Who are you..?"class="form-control">
      <br>
      <label>Content</label>
      <input type="text" name="content" class="form-control">
      <br>
      <label>Upload Images</label>
      <input type="file" name="photo" class="form-control" placeholder="express with images..">
      <br>
      <input type="submit" value="Submit" class="btn btn-md btn-primary">  
    </form>
</div>
</div>

<div class="container footer">
    <div class="row">
        <div class="col-lg-12">
        <p>Blog &copy; 2017 </p>
        
      </div>
    </div>


</body>
</html>